{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build:vercel",
        "outputDirectory": "build",
        "env": {
          "TSC_COMPILE_ON_ERROR": "true"
        }
      }
    }
  ],
  "env": {
    "TSC_COMPILE_ON_ERROR": "true"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://barbachli-api.onrender.com/api/$1" }
  ]
} 